# Merkle Tree Configuration
MERKLE_TREE_HEIGHT=20  # Supports up to 2^20 = 1,048,576 recipients

# Output Configuration
OUTPUT_DIR=./output
SNAPSHOT_OUTPUT_CSV=snapshot.csv
WEIGHTS_OUTPUT_CSV=weights.csv
REWARDS_OUTPUT_CSV=rewards.csv
MERKLE_OUTPUT_JSON=merkle.json

# Validation Configuration
MAX_REWARD_DEVIATION=0.01  # 1% tolerance for reward sum validation

# Private Key for setMerkleRoot (only for authorized admin)
